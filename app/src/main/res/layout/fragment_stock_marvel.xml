<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <ImageView
            android:id="@+id/imgStockDescription"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/des_marvel" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleStockDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="425dp"
        android:text="Marvel Case"
        android:textAppearance="@style/des_astronaut_title"
        android:lineSpacingExtra="0sp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp" />

    <TextView
        android:id="@+id/des1_Stock"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="475dp"
        android:text="@string/item_description"
        android:textAppearance="@style/item_description"
        android:lineSpacingExtra="0sp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp" />

</RelativeLayout>