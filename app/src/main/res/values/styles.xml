<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#000000</item>
        <item name="actionOverflowMenuStyle">@style/OptionsMenuCustomStyle</item>
    </style>

    <style name="OptionsMenuCustomStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor" tools:ignore="NewApi">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

    <style name="bottomNavStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="welcome">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="tabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="textField">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="signInButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="dashboard">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="dashboard_stock">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="dashboard_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="dashboard_cases">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="des_astronaut_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="item_description">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="contact_center_title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="contact_center_description">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>